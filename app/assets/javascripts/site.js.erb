$(document).on('turbolinks:load', function(){
  $('.rating').raty( { path: '/assets', starHalf:"<%= image_path 'star-half.png' %>",
  	starOff:"<%= image_path 'star-off.png' %>", 
		starOn:"<%= image_path 'star-on.png' %>", 
		scoreName: 'comment[rating]' 
	}); 

	$('.rated').raty({ path: '/assets', starHalf:"<%= image_path 'star-half.png' %>", 
		starOff:"<%= image_path 'star-off.png' %>", 
		starOn:"<%= image_path 'star-on.png' %>", 
		readOnly: true, 
		score: function() { 
		return $(this).attr('data-score');
    }
  });

  $('.img-zoom').elevateZoom({
  	easing: true,
  	tint: true,
  	tintColour: '#1E90FF',
  	tintOpacity: 0.75,
  	zoomWindowWidth: 400,
  	zoomWindowHeight: 400
  });
});