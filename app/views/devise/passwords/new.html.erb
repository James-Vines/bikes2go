<section>
  <div class="container">
  	<h2>Forgot your password?</h2>

    <div class="form">
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  		<%= devise_error_messages! %>

  		<div class="field">
    		<h4><%= f.label :email, class: "form-label" %></h4>
    		<h5><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email *", required: "required" %></h5>
  		</div>

  		<div class="actions">
    		<%= f.submit "Send me reset password instructions", class: "btn btn-default btn-default-transparent" %>
  		</div>
			<% end %>
		</div>
		<p><%= render "devise/shared/links" %></p>
	</div>
</section>
