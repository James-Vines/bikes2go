<section>
  <div class="container form">
    <%= form_for(product) do |f| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <h4><%= f.label :name, class: "form-label col-xs-4 col-sm-2" %></h4>
        <h5><%= f.text_field :name, class: "form-input col-xs-8 col-sm-10" %></h5>
      </div>

      <div class="field">
        <h4><%= f.label :description, class: "form-label col-xs-4 col-sm-2" %></h4>
        <h5><%= f.text_area :description, class: "form-input col-xs-8 col-sm-10" %></h5>  
      </div>

      <div class="field">
        <h4><%= f.label :image_url, class: "form-label col-xs-4 col-sm-2" %></h4>
        <h5><%= f.text_field :image_url, class: "form-input col-xs-8 col-sm-10" %></h5>
      </div>

      <div class="field">
        <h4><%= f.label :price, class: "form-label col-xs-4 col-sm-2" %></h4>
        <h5><%= f.text_field :price, class: "form-input col-xs-8 col-sm-10" %></h5>  </div>  

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</section>

